    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
</head>
<body>
    <h1>Search User</h1>
    <form action="{{ url_for('search') }}" method="post">
        <input type="text" name="query" placeholder="Enter name..." required>
        <button type="submit">Search</button>
    </form>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Search Results</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
</head>
<body>
    <h1>Results for "{{ query }}"</h1>
    {% if result %}
        <ul>
            {% for row in result %}
                <li>ID: {{ row['id'] }}, Name: {{ row['name'] }}, Age: {{ row['age'] }}, City: {{ row['city'] }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No results found.</p>
    {% endif %}
    <a href="{{ url_for('index') }}">Go Back</a>
</body>
</html>
